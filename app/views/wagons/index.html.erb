<p id="notice"><%= notice %></p>

<h1>Wagons</h1>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Type</th>
    <th>Train</th>
    <th>Number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @wagons.each do |wagon| %>
      <tr>
        <td><%= wagon.id %></td>
        <td><%= wagon.class %></td>
        <td><%= wagon.number_wagon %></td>
        <td><%= link_to 'Show', wagon_path(wagon) %></td>
        <td><%= link_to 'Edit', edit_wagon_path(wagon) %></td>
        <td><%= link_to 'Destroy', wagon_path(wagon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wagon', new_wagon_path %> <br/>

