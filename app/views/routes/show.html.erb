<p id="notice"><%= notice %></p>

<p>
  <strong>Название станции:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Поезда:</strong>
  <% if @route.trains.present? %>
    <% @route.trains.each do |train| %>
      <%= train.number %>
    <% end %>
  <% else %>
    Поездов на маршруте нет
  <% end %>
</p>

<p>
  <strong>Станции в маршруте:</strong>
</p>

<p>
  <% if @route.railway_stations.empty? %>
    Станции в маршруте нет
  <% else %>
    <table>
      <thead>
        <tr>
          <td width="100px">Название</td>
          <td>Позиция</td>
        </tr>
      </thead>
      <tbody>
      <% @route.railway_stations.ordered.each do |station| %>
      <tr>
        <td> <%= station.title %> </td>
        <td>
        <%= form_tag update_position_railway_station_path(station), method: :patch do %>
              <%= number_field_tag :position, station.position_in(@route) %>
              <%= hidden_field_tag :route_id, @route.id %>
              <%= submit_tag 'Изменить' %>
          <% end %>

          <%= form_tag update_times_railway_station_path(station), method: :patch do %>
            <td>
              <%= time_field_tag :arrive_time, station.arrive_time_in(@route) %>
            </td>
            <td>
              <%= time_field_tag :departure_time, station.departure_time_in(@route) %>
              <%= hidden_field_tag :route_id, @route.id %>
              <%= submit_tag "Изменить" %>
            </td>
        <% end %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</p>


<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
