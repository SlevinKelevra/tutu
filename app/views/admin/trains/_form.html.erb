<%= form_for [:admin, train] do |f| %>

    <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.number_field :number %>
  </div>

  <div class="field">
    <%= f.label :route_id, 'Маршрут' %>
    <%= f.collection_select :route_id, Route.all, :id, :name, {}, {class: 'form-control'} %>
  </div>

  <div class="field">
    <%= f.label :current_station_id %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title, {}, {class: 'form-control'} %>
  </div>

  <div class="field">
    <%= f.label :sort_from_head, 'Сортировка вагонов в обратном порядке' %>
    <%= f.check_box :sort_from_head %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @train.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
